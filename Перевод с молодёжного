slova= { 
    "ЛОЛ" : "очень смешно", 
    "КРИНЖ" : "что-то странное, стыдное", 
    "РОФЛ" : "шутка", 
    "ЩИЩ" : "одобрение или восторг", 
    "КРИПОВЫЙ" : "страшный, пугающий", 
    "АГРИТЬСЯ" : "злиться"
    }
    
vasheSlovo= input("Здраствуйте,Какое слово вам непонятно (Писать большими буквами): ")


if vasheSlovo in slova.keys():
    print(slova[vasheSlovo])
else:
    print("Ваше слово не находиться в списке")
